<main id='session-main' className='clearfix'>
  <h1>scarebnb</h1>
  <a href='/session/new'>Log in</a>

  <%= render 'shared/errors' %>
  <section id='signup-section' class='session-section'>
    <h2>Join the fright.</h2>

    <form action='/user' method='POST'>
      <input type='text' class='input-field session-input' name='user[username]' id='user_username' placeholder='username'/>
      <input type='text' class='input-field session-input' name='user[email]' id='user_email' placeholder='email'/>
      <input type='password' class='input-field session-input' name='user[password]' id='user_password' placeholder='password'/>
      <input type='submit' class='button session-input session-submit' id='session-submit-signup' value='Start haunting!' />
    </form>
  </section>
</main>
