<main id='session-main' className='clearfix'>
  <h1>scarebnb</h1>
  <a href='/session/new'>Log in</a>

  <section id='signup-section' class='session-section'>
    <h2>Join the fright.</h2>

    <form action='/user' method='POST'>
      <input type='text' class='input-field' name='user[username]' id='user_username' placeholder='username'/>
      <input type='text' class='input-field' name='user[email]' id='user_email' placeholder='email'/>
      <input type='password' class='input-field' name='user[username]' id='user_password' placeholder='password'/>

      <input type='submit' class='button' id='session-submit' value='Sign up!' />
    </form>
  </section>
</main>
